@using Microsoft.EntityFrameworkCore;
@using Database
@using Microsoft.AspNetCore.Http
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Tuple<IEnumerable<Database.User>,IEnumerable<Database.ProjectAssign>,IEnumerable<Database.Task>>
@{
    ViewData["Title"] = "AllMember";
    Layout = "~/Pages/_Layout.cshtml";
    var uid = "";
    int istaskassign = 0;
}
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor



<head>


    <style>


        .field-validation-error {
            color: red;
        }

        .input-validation-error {
            border: 1px solid red;
        }

        .AvatarPhoto--color2.AvatarPhoto {
            background-color: forestgreen;
            color: white;
        }

        .ProfilePageHeader-avatar {
            flex-shrink: 0;
        }

        .Avatar {
            align-items: center;
            background: lightGray;
            border-radius: 50%;
            box-shadow: inset 0 0 0 1px rgb(0 0 0 / 7%);
            box-sizing: border-box;
            color: #fff;
            -webkit-print-color-adjust: exact;
            color-adjust: exact;
            display: inline-flex;
            justify-content: center;
            position: relative;
            vertical-align: top;
        }

        .AvatarPhoto1--xlarge1 {
            font-size: 30px;
            height: 88px;
            line-height: 88px;
            min-width: 88px;
            width: 88px;
        }

        .AvatarPhoto--default {
            background: center/cover var(--color-customization-background-deprecated-opaque);
            border-radius: 50%;
            box-shadow: inset 0 0 0 1px rgb(0 0 0 / 7%);
            box-sizing: border-box;
            color: var(--color-customization-foreground);
        }

        .AvatarPhoto {
            align-items: center;
            display: inline-flex;
            justify-content: center;
            position: relative;
            vertical-align: top;
        }
    </style>


</head>








@{
    @foreach (var obj in Model.Item1)
    {
        foreach (var item in Model.Item2)
        {
            foreach (var task in Model.Item3)
            {

                if (item.UserID == obj.UserID && item.ProjectID == @HttpContextAccessor.HttpContext.Session.GetInt32("projjid"))
                {
                    if (task.UserId == obj.UserID && task.ProjectID == @HttpContextAccessor.HttpContext.Session.GetInt32("projjid"))
                    {
                        istaskassign++;
                    }
                }
            }
        }
    }
}

<div class="content-body">
    <!-- row -->
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <form method="get" asp-controller="Account" asp-action="AllMember">
                <div class="input-group contacts-search mb-4">
                    <input type="Search" name="Search" class="form-control" placeholder="Search here...">
                    <span class="input-group-text"><button style="border:0;size:20px;color:gray" type="submit" asp-controller="Account" asp-action="AllMember"><i class="flaticon-381-search-2"></i></button></span>
                </div>
            </form>
            <div class="mb-4">
                <a asp-controller="Account" asp-action="AddMember" asp-route-id="@HttpContextAccessor.HttpContext.Session.GetInt32("projjid")" class="btn btn-primary btn-rounded fs-18">+ Add New Member</a>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="row">
                    @foreach (var obj in Model.Item1)
                    {
                        foreach (var item in Model.Item2)
                        {
                            if (item.UserID == obj.UserID && item.ProjectID == @HttpContextAccessor.HttpContext.Session.GetInt32("projjid"))
                            {
                                if (istaskassign == 0)
                                {
                                    ViewData["usertype"] = item.UserType;
                                    <div class="col-xl-3 col-xxl-4 col-lg-4 col-md-6 col-sm-6 items">
                                        <div class="card contact-bx item-content" onclick="showmsg()">
                                            <div class="card-body user-profile pb-0">
                                                <div class="d-flex align-items-center">
                                                    <div class="image-bx">
                                                        @{
                                                            var n = @obj.FullName;
                                                            var a = n.Split(" ");
                                                            var b = a[0].Substring(0, 1);
                                                            var c = a[1].Substring(0, 1);
                                                            var d = b + c;
                                                        }

                                                        <div class="ProfilePageHeader-avatar Avatar AvatarPhoto AvatarPhoto--default AvatarPhoto1--xlarge1 AvatarPhoto--color2" role="img">
                                                            <div aria-hidden="true"> @d </div>
                                                        </div>
                                                    </div>
                                                    <div class="ms-3 text-start">
                                                        <h4 class="fs-18 font-w600">@obj.FullName</h4>
                                                        <span class="mb-2 d-block">@obj.JoinDate.GetValueOrDefault().ToString("D")</span>
                                                        <span class="text-primary d-block">@item.UserType.ToString()</span>
                                                    </div>
                                                </div>
                                                <div class="user-meta-info">
                                                    <ul>
                                                        <li><a href="javascript:void(0);"><i class="fas fa-phone-alt"></i></a>+91 @obj.ContactNo</li>
                                                        <li><a href="javascript:void(0);"><i class="far fa-comment-alt"></i></a>@obj.EmailID</li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    ViewData["usertype"] = item.UserType;
                                    <div class="col-xl-3 col-xxl-4 col-lg-4 col-md-6 col-sm-6 items">
                                        <div class="card contact-bx item-content" onclick="IsAsign(@obj.UserID,@item.ProjectID)">
                                            <div class="card-body user-profile pb-0">
                                                <div class="d-flex align-items-center">
                                                    <div class="image-bx">
                                                        @{
                                                            var n = @obj.FullName;
                                                            var a = n.Split(" ");
                                                            var b = a[0].Substring(0, 1);
                                                            var c = a[1].Substring(0, 1);
                                                            var d = b + c;
                                                        }

                                                        <div class="ProfilePageHeader-avatar Avatar AvatarPhoto AvatarPhoto--default AvatarPhoto1--xlarge1 AvatarPhoto--color2" role="img">
                                                            <div aria-hidden="true"> @d </div>
                                                        </div>
                                                    </div>
                                                    <div class="ms-3 text-start">
                                                        <h4 class="fs-18 font-w600">@obj.FullName</h4>
                                                        <span class="mb-2 d-block">@obj.JoinDate.GetValueOrDefault().ToString("D")</span>
                                                        <span class="text-primary d-block">@item.UserType.ToString()</span>
                                                    </div>
                                                </div>
                                                <div class="user-meta-info">
                                                    <ul>
                                                        <li><a href="javascript:void(0);"><i class="fas fa-phone-alt"></i></a>+91 @obj.ContactNo</li>
                                                        <li><a href="javascript:void(0);"><i class="far fa-comment-alt"></i></a>@obj.EmailID</li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        }
                    }
                </div>
                <!--End of all user-->

            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script type="text/javascript">



        var UId;
        var PId;
        function IsAsign(UserId, ProjectId) {
            UId = UserId;
            PId = ProjectId;
            $.get(window.location.origin + "/Project/IsAsign?UserId=" + parseInt(UserId) + "&ProjectId=" + parseInt(ProjectId), null, CallBack)
        }
        function CallBack(response) {
            if (response) {
                window.location.href = "/Project/UserDashBoard?uid=" + UId + "&id=" + PId;

            } else {
                swal("Oops!!", "There is no Task assign to this member, First assign the Task", "error");
            }
        }
        var msg = "@ViewBag.Js";
        window.onload = function() {
            if (msg == "ok") {
                alert("no task assign to member");
                return false;
            }
        };
        function showmsg() {
            swal("Oops!!", "There is no Task assign to this member, First assign the Task", "error");
        }

        window.onpageshow = function(event) {
            if (event.persisted) {
                window.location.reload()
            }
        };
        //If you are using jQuery then do:

        $(window).bind("pageshow", function(event) {
            if (event.originalEvent.persisted) {
                window.location.reload()
            }
        });

    </script>
}

