@model Tuple<Database.Project,IEnumerable<Database.Project>,IEnumerable<Database.Task>,IEnumerable<Database.User>>
@{
    ViewData["Title"] = "AllProject";
    bool isadmin = true;
}


@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="keywords" content="" />
    <meta name="author" content="" />
    <meta name="robots" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Workload : Workload Project Management Admin  Bootstrap 5 Template" />
    <meta property="og:title" content="Workload : Workload Project Management Admin  Bootstrap 5 Template" />
    <meta property="og:description" content="Workload : Workload Project Management Admin  Bootstrap 5 Template" />
    <meta property="og:image" content="https:/workload.dexignlab.com/xhtml/social-image.png" />
    <meta name="format-detection" content="telephone=no">

    <!-- PAGE TITLE HERE -->
    <title>Task Organizer</title>

    <!-- FAVICONS ICON -->

    <link rel="shortcut icon" type="image/svg" href="~/Contents/images/favicon.png" />
    <link href="~/Contents/css/style.css" rel="stylesheet">

</head>

<body class="vh-100">
    <div class="modal fade bd-example-modal-lg" id="addproject" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="">
                    <div class="container">
                        <div class="row justify-content-center align-items-center">
                            <div class="col-md-12">
                                <div class="authincation-content">
                                    <div class="row no-gutters">
                                        <div class="col-xl-20">
                                            <div class="auth-form">
                                                <button type="button" class="btn-close text-right" data-bs-dismiss="modal">
                                                </button>
                                                <div class="text-center mb-3">
                                                    <img src="~/Contents/images/logo.png" alt="">
                                                    <h3 class="text-center mb-4">Add New Project</h3>
                                                </div>
                                                <form action="AddProject">
                                                    <div class="mb-3">
                                                        <label class="mb-1"><strong>Project Name :</strong></label>

                                                        @Html.TextBoxFor(p=>p.Item1.ProjectTitle,new {@class="form-control",placeholder="ProjectName"})
                                                        @Html.ValidationMessageFor(p=>p.Item1.ProjectTitle)
                                                    </div>

                                                    <div class="mb-3">
                                                        <label class="mb-1"><strong>Key :</strong></label>

                                                        @Html.TextBoxFor(p=>p.Item1.Key,new {@class="form-control",placeholder="Key",id="Key"})
                                                    </div>

                                                    <div class="mb-3">
                                                        <label class="mb-1"><strong>Description :</strong></label>

                                                        @Html.TextAreaFor(p=>p.Item1.Description,new{@name="txtarea1",id="txtarea1",cols="20",rows="3",@class="form-control"})
                                                    </div>



                                                    <div class="mb-3">
                                                        <label class="mb-1"><strong>Start Date :</strong></label>

                                                        @Html.TextBoxFor(p=>p.Item1.StartDate,new {@class="form-control",type="date",id="startdate"})
                                                        @Html.ValidationMessageFor(p=>p.Item1.StartDate)
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="mb-1"><strong>End Date :</strong></label>

                                                        @Html.TextBoxFor(p=>p.Item1.EndDate,new {@class="form-control",type="date",id="EndDate"})
                                                        @Html.ValidationMessageFor(p=>p.Item1.EndDate)
                                                    </div>
                                                    <div class="text-center mt-4">
                                                        <button type="Submit" class="btn btn-primary">Save</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--**********************************
        Scripts
    ***********************************-->
    <!-- Required vendors -->
    <script src="~/Contents/vendor/global/global.min.js"></script>
    <script src="~/Contents/js/custom.min.js></script>
    <script src="~/Contents/js/dlabnav-init.js"></script>
    <script src="./js/styleSwitcher.js"></script>
</body>
</html>