@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Database.Project
<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="keywords" content="" />
    <meta name="author" content="" />
    <meta name="robots" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Workload : Workload Project Management Admin  Bootstrap 5 Template" />
    <meta property="og:title" content="Workload : Workload Project Management Admin  Bootstrap 5 Template" />
    <meta property="og:description" content="Workload : Workload Project Management Admin  Bootstrap 5 Template" />
    <meta property="og:image" content="https:/workload.dexignlab.com/xhtml/social-image.png" />
    <meta name="format-detection" content="telephone=no">

    <!-- PAGE TITLE HERE -->
    <title>Task Organizer</title>

    <!-- FAVICONS ICON -->

    <link rel="shortcut icon" type="image/svg" href="~/Contents/images/favicon.png" />
    <link href="~/Contents/vendor/jquery-nice-select/css/nice-select.css" rel="stylesheet">
    <link href="~/Contents/vendor/owl-carousel/owl.carousel.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Contents/vendor/nouislider/nouislider.min.css">
    <link href="~/Contents/css/style.css" rel="stylesheet">
    <style>
        .field-validation-error {
            color: red;
        }

        .input-validation-error {
            border: 1px solid red;
        }
    </style>
</head>
<body class="vh-100">

    <form action="Edit" method="post">

        <div class="authincation h-200">
            <div class="container h-200">
                <div class="row justify-content-center align-items-center h-300">
                    <div class="col-md-10">
                        <div class="authincation-content">
                            <div class="row no-gutters">
                                <div class="col-xl-20">
                                    <div class="auth-form">




                                        <button type="submit" class="btn-close text-left" asp-controller="Project" asp-action="AllProject">
                                        </button>
                                        <div class="text-center mb-3">
                                            <img src="~/Contents/images/logo.png" alt="">
                                            <h3 class="text-center mb-4">Edit Project Details</h3>
                                        </div>


                                        <input type="hidden" asp-for="ProjectID" />
                                        <div class="mb-3">
                                            <label class="mb-1" asp-for="@Model.ProjectTitle"><strong>Project Name</strong></label>
                                            <input type="text" class="form-control" asp-for="@Model.ProjectTitle">
                                            <span asp-validation-for="ProjectTitle"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label class="mb-1" asp-for="@Model.Key"><strong>Key</strong></label>
                                            <input type="text" class="form-control" asp-for="@Model.Key">
                                            <span asp-validation-for="Key"></span>
                                        </div>

                                        <div hidden class="mb-3">
                                            <label class="mb-1" asp-for="@Model.Duration"><strong>Duration</strong></label>
                                            <input type="text" class="form-control" asp-for="@Model.Duration">
                                        </div>
                                        <div class="mb-3">
                                            <label class="mb-1"><strong>Description :</strong></label>
                                            <textarea cols="20" rows="3" class="form-control" asp-for="@Model.Description"></textarea>
                                            <span asp-validation-for="Description"></span>
                                        </div>

                                        <div hidden class="mb-3">
                                            <label class="mb-1"><strong>Created By</strong></label>
                                            <input type="text" class="form-control" asp-for="@Model.UserID" readonly>
                                        </div>
                                        <div class="mb-3">
                                            <label class="mb-1" asp-for="@Model.StartDate"><strong>Start Date</strong></label>
                                            <input type="date" class="form-control" asp-for="@Model.StartDate">
                                            <span asp-validation-for="StartDate"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label class="mb-1" asp-for="@Model.EndDate"><strong>End Date</strong></label>
                                            <input type="date" class="form-control" placeholder="Date" asp-for="@Model.EndDate">
                                            <span asp-validation-for="EndDate"></span>
                                        </div>

                                        <div class="container-fluid">
                                            <div class="row">
                                                <div class="col-3">
                                                    <button type="submit" class="btn btn-dark mb-2 me-2" id="toastr-success-bottom-center">Save</button>
                                                </div>
                                                <div class="col-4">

                                                    <button type="submit" class="btn btn-dark mb-2" asp-controller="Project" asp-action="AllProject">Cancel</button>
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>

    <script src="~/Contents/vendor/global/global.min.js"></script>
    <script src="~/Contents/js/custom.min.js"></script>
    <script src="~/Contents/js/dlabnav-init.js"></script>
    <script src="~/Contents/js/styleSwitcher.js"></script>
</body>
</html>